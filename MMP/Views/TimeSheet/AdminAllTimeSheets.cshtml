@section Scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.18/api/fnFilterClear.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.0.3/js/dataTables.rowGroup.min.js"></script>
    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable = $("#timesheetsTable").DataTable({
                "ajax": {
                    "url": "/TimeSheet/GetUserDataForAdmin/?flag=currentTimeSheets",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "user.employee_id" },
                    { "data": "user.user_name" },
                    { "data": "supervisorName" },
                    { "data": "ts.timesheet_status" },
                    { "data": "ts.ts_status_update" },
                    { "data": "ts.updated_by" },
                    { "data": "tsmr.created_at" },
                    { "data": "tsmr.startDate" },
                    { "data": "tsmr.endDate" },
                    { "data": "ts.extendedDate" },
                    { "data": "ts.timesheet_id", "render": function (data) {
                        return "<a class= 'btn btn-default btn-sm' onclick=redirctEditView(" + data + ")><i class= 'fa fa-pencil'></i> View/Edit Timesheet</a><a class= 'btn btn-default btn-sm' onclick=OpenModal('@Url.Action("ExtendTimeSheet", "TimeSheet")/" + data + "')><i class= 'fa fa-pencil'></i> Extend TimeSheet</a>"//<a class= 'btn btn-danger btn-sm' style='margin-left:5px' ><i class= 'fa fa-trash'></i> Delete</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable" : "No TimeSheets Available for current week"
                }
            });
        });

        function OpenModal(url) {
            debugger;
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: url,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
            //$("#closebtn").on('click',function(){  
            //    $('#myModal').modal('hide');    

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        }

