        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            $('#myModal').modal('hide');
                            //Popup.dialog('close');
                            dataTable.ajax.reload(null, false);

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function redirctEditView(id)
        {
            location.href = '@Url.Action("AdminTimeSheetEdit", "TimeSheet")/'+id;
        }

        function redirect()
        {
            location.href = '@Url.Action("AdminAllPreviousTimeSheets", "TimeSheet")';
        }

    </script>
}

