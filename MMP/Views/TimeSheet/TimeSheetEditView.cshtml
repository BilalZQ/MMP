        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            //Popup.dialog('close');
                            $('#myModal').modal('hide');

                            location.reload(true);
                            //table.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id, category_typeID) {
            if (confirm('Are you sure you want to remove this Category/CategoryType from TimeSheet?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "TimeSheet")/?id=' + id + '&category_typeID=' + category_typeID,
                    success: function (data) {
                        if (data.success) {
                            location.reload(true);
                            //dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

        function Reload(id)
        {
            location.href = '@Url.Action("TimeSheetEditView", "TimeSheet")';
        }

    </script>
}