@section Scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable = $("#timesheetsTable").DataTable({
                "ajax": {
                    "url": "/TimeSheet/GetUserDataForAdmin/?flag=previousTimeSheets",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "user.user_name" },
                    { "data": "supervisorName" },
                    { "data": "ts.timesheet_status" },
                    { "data": "ts.ts_status_update" },
                    { "data": "ts.updated_by" },
                    { "data": "tsmr.created_at" },
                    { "data": "tsmr.startDate" },
                    { "data": "tsmr.endDate" },
                    { "data": "ts.extendedDate" },
                    { "data": "ts.timesheet_id", "render": function (data) {
                        return "<a class= 'btn btn-default btn-sm' onclick=redirctEditView("+ data +")><i class= 'fa fa-pencil'></i> View/Edit Timesheet</a><a class= 'btn btn-danger btn-sm' style='margin-left:5px' ><i class= 'fa fa-trash'></i> Delete</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable" : "No TimeSheets Available for current week"
                }
            });
        });

        function PopupForm(url)
        {
            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: "Fill TimeSheet details",
                    height: 700,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function redirctEditView(id)
        {
            location.href = '@Url.Action("AdminTimeSheetEdit", "TimeSheet")/'+id;
        }

        function redirect()
        {
            location.href = '@Url.Action("AdminAllTimeSheets", "TimeSheet")';
        }

    </script>
}

