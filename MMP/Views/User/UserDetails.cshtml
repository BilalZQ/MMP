@{
    ViewBag.Title = "Users List";
}

<h2>User CRUD operations</h2>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddUser", "User")')"><i class="fa fa-plus"></i> Add New</a>

<table id="userTable" class="table table-striped table-bordered" style="width:70%">
    <thead>
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>User Role</th>
            <th>Email</th>
            <th>created at</th>
            <th>updated at</th>
            <th>supervisor</th>
            <th>Region</th>
            <th></th>
        </tr>
    </thead>

</table>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />



@section Scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, dataTable;

        $(document).ready(function (){
            dataTable = $("#userTable").DataTable({
                "ajax": {
                    "url": "/User/GetData/"+ @ViewBag.userID,
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "user.user_id" },
                    { "data": "user.user_name" },
                    { "data": "user_role" },
                    { "data": "user.user_email" },
                    { "data": "user.creationDate" },
                    { "data": "user.updateDate" },
                    { "data": "supervisor" },
                    { "data": "region" },
                    { "data": "user.user_id", "render": function (data) {
                            return "<a class= 'btn btn-default btn-sm' onclick=PopupForm('@Url.Action("EditUser", "User")/" + data + "')><i class= 'fa fa-pencil'></i> Edit</a><a class= 'btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class= 'fa fa-trash'></i> Delete</a><a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("ChangePassword", "User")/" + data + "')><i class='fa fa-pencil'></i> Edit Password</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable" : "No projects Available, Click on <b>Add New</b> Button to add a new project"
                }
            });
        });

        function PopupForm(url)
        {
            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: "Fill user details",
                    height: 700,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id)
        {
            if (confirm('Are you sure you want to remove this user?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "User")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

    </script>
}

