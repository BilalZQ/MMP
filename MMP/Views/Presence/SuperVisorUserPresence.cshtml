@section Scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable = $("#presenceTable").DataTable({
                "ajax": {
                    "url": "/Presence/GetSupervisorUserData/" +@ViewBag.user_id,
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "p.day" },
                    { "data": "p.total_hours" },
                    { "data": "p.leave_status" },
                    { "data": "u.user_name" },
                    { "data": "u.employee_id" }
                ],
                "language": {
                    "emptyTable" : "No Entries in attendance table"
                }
            });
        });

    </script>
}

