@{
    ViewBag.Title = "Category Types in Detail";
}

<h2>Category Types CRUD operations</h2>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddCategory", "Category")')"><i class="fa fa-plus"></i> Add New Category Type</a>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddorEditDepartments", "Category")')"><i class="fa fa-plus"></i> Department Entry</a>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddorEditProjects", "Category")')"><i class="fa fa-plus"></i> Project Entry</a>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddorEditLeaves", "Category")')"><i class="fa fa-plus"></i> Leave Entry</a>

<table id="CategoryTypeTable" class="table table-striped table-bordered" style="width:70%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Sector</th>
            <th>Project Model</th>
            <th>No of Leaves</th>
            <th>Encashable</th>
            <th>Carry Forward</th>
            <th></th>
        </tr>
    </thead>

</table>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />



@section Scripts{
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, dataTable;

        $(document).ready(function (){
            dataTable = $("#CategoryTypeTable").DataTable({
                "ajax": {
                    "url": "/Category/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ctd.ctd_id" },
                    { "data": "ctd.ctd_name" },
                    { "data": "ctd.ctd_code" },
                    { "data": "category.category_name" },
                    { "data": "ctd.created_at" },
                    { "data": "ctd.updated_at" },
                    { "data": "sector_name" },
                    { "data": "project_model" },
                    { "data": "no_of_leaves" },
                    { "data": "encashable" },
                    { "data": "carry_forward" },
                    { "data": "ctd.ctd_id", "render": function (data, type, full) {
                        return "<a class= 'btn btn-default btn-sm' onclick=PopupFormv2(" + '\'' + full.category.category_name + '\'' + ',' + data + /*',' + full.project_id + ',' + full.leave_id +*/")><i class= 'fa fa-pencil'></i> Edit</a><a class= 'btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class= 'fa fa-trash'></i> Delete</a>"
                    },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable" : "No category types available Available for current year, Click on <b>Add New Category Type</b> Button to add Category Types"
                }
            });
        });

        function PopupForm(url)
        {
            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: "Fill Category Type details",
                    height: 700,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function PopupFormv2(category, id/*, proj_detail_id, leave_detail_id*/) {

            //alert(category); alert(id); alert(proj_detail_id); alert(leave_detail_id);            
            if (category === "departments")
            {
                url = "/Category/AddorEditDepartments/"+ id;
            }
            else if (category === "projects")
            {
                //url = "/Category/AddorEditProjects/?id=" + id + "&pd_id=" + proj_detail_id;
                url = "/Category/AddorEditProjects/" + id;
            }
            else if (category === "leaves")
            {
                url = "/Category/AddorEditLeaves/" + id;
            }

            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: "Fill Category Type details",
                    height: 700,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id)
        {
            if (confirm('Are you sure you want to remove this Category Type?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Category")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

    </script>
}

