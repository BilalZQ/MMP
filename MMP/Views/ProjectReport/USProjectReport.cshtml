@model MMP.Models.ViewModels.Reports.USProjectReport

@{
    ViewBag.Title = "User Specific Project Report";
}


@using (Html.BeginForm("UpdateProduct"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="row page-titles">
                <div class="col-md-5 col-8 align-self-center">
                    <h3 class="text-themecolor">Dashboard</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active">US Project Report</li>
                    </ol>
                </div>
                <div class="col-md-7 col-4 align-self-center">
                    <a href="https://wrappixel.com/templates/materialpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <!-- Row -->

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    @Html.LabelFor(model => model.date_from, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.date_from, new { htmlAttributes = new { /*@class = "form-control",*/ @id = "from" } })
                    @Html.ValidationMessageFor(model => model.date_from, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.date_to, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.date_to, new { htmlAttributes = new { /*@class = "form-control",*/ @id = "to" } })
                    @Html.ValidationMessageFor(model => model.date_to, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.userName, new { /*@class = "form-control"*/ })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.userID)
                    <a class="btn btn-success" style="margin-bottom:10px" onclick="Search()"><i class="fa fa-plus"></i> Search!</a>
                </div>
            </div>

            <table id="userTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>User Name</th>
                        <th>User Role</th>
                        <th>Email</th>
                        <th>created at</th>
                        <th>updated at</th>
                        <th>supervisor</th>
                        <th>Region</th>
                    </tr>
                </thead>

            </table>

            <table id="userProjectTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Project Name</th>
                        <th>Work Hours</th>                        
                    </tr>
                </thead>

            </table>

            <table id="ProjectTotalHoursTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Projects</th>
                        <th>Total Hours</th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer"> © 2017 Material Pro Admin by wrappixel.com </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
}



<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="https://cdn.datatables.net/rowgroup/1.0.3/css/rowGroup.dataTables.min.css">





    @section Scripts{
        <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
        <script src="https://cdn.datatables.net/plug-ins/1.10.18/api/fnFilterClear.js"></script>
        <script src="https://cdn.datatables.net/rowgroup/1.0.3/js/dataTables.rowGroup.min.js"></script>

        <script>
        var dataTable;

        $(function () {
            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                onSelect: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                },
                dateFormat: 'yy/mm/dd'
            });

            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                onSelect: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                },
                dateFormat: 'yy/mm/dd'
            });
        });

        $(document).ready(function () {
                $("#userName").autocomplete({
                    source: function (request, response) {
                        $.ajax({
                            url: '@Url.Action("GetUser", "ProjectReport")',
                            datatype: "json",
                            data: {
                                //Areas: 'Sales',
                                term: request.term
                            },
                            success: function (data) {
                                response($.map(data, function (val, item) {
                                    return {
                                        label: val.Name,
                                        value: val.Name,
                                        customerId: val.ID
                                    }
                                }))
                            }
                        })
                    },
                    select: function (event, ui) {
                        $("#userID").val(ui.item.customerId);
                    }
                });
        });

            function Search() {
                var userID = $("#userID").val();
                var startDate = $("#from").val();
                var endDate = $("#to").val();

                if (userID == 0) {
                    alert("Enter User name");
                    return;
                } else if (startDate == 0 || endDate == 0){
                    alert("Select Valid Date Range");
                    return;
                }

                DataTables(userID, startDate, endDate);
            }

            function DataTables (id, startDate, endDate)
            {
                $('#userTable').dataTable().fnDestroy();
                dataTable = $("#userTable").DataTable({
                    "ajax": {
                        "url": "/ProjectReport/GetUserData/" + id,
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "user.user_id" },
                        { "data": "user.user_name" },
                        { "data": "user_role" },
                        { "data": "user.user_email" },
                        { "data": "user.creationDate" },
                        { "data": "user.updateDate" },
                        { "data": "supervisor" },
                        { "data": "region" }
                    ],
                    "language": {
                        "emptyTable": "No projects Available, Click on <b>Add New</b> Button to add a new project"
                    },
                    'columnDefs': [
                        {
                            "targets": '_all', // Centre text in all columns
                            "className": "text-center",
                            "width": "10%"
                        }],
                    "searching": false,
                    "paging": false,
                    "bInfo": false
                });
            //--------------------------------------------------------------------------------------------------------------------------
                $('#userProjectTable').dataTable().fnDestroy();
                dataTable = $("#userProjectTable").DataTable({
                    "ajax": {
                        "url": "/ProjectReport/GetUserProjects/?id=" + id + "&startDate=" + startDate + "&endDate=" + endDate,
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "ctd_name" },
                        { "data": "workhours" }
                    ],
                    rowGroup: {
                        dataSrc: 'day'
                    },
                    "language": {
                        "emptyTable": "No projects Available, Click on <b>Add New</b> Button to add a new project"
                    },
                    'columnDefs': [
                        {
                            "targets": '_all', // Centre text in all columns
                            "className": "text-center",
                            "width": "10%"
                        }],
                    "searching": false,
                    "paging": true,
                    "bInfo": false
                });          

                //--------------------------------------------------------------------------------------------------------------------------
                $('#ProjectTotalHoursTable').dataTable().fnDestroy();
                dataTable = $("#ProjectTotalHoursTable").DataTable({
                    "ajax": {
                        "url": "/ProjectReport/GetUserProjectsTotalHours/?id=" + id + "&startDate=" + startDate + "&endDate=" + endDate,
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "ctd_name" },
                        { "data": "totalHours" }
                    ],
                    "language": {
                        "emptyTable": "No projects Available, Click on <b>Add New</b> Button to add a new project"
                    },
                    'columnDefs': [
                        {
                            "targets": '_all', // Centre text in all columns
                            "className": "text-center",
                            "width": "10%"
                        }],
                    "searching": false,
                    "paging": true,
                    "bInfo": false
                }); 

            }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id)
        {
            if (confirm('Are you sure you want to remove this user?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "User")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

        function redirect(id)
        {
            location.href = '@Url.Action("UserPresence", "Presence")/' + id;
        }
        </script>
    }

