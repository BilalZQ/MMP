        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            $('#myModal').modal('hide');
                            //Popup.dialog('close');
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id)
        {
            if (confirm('Are you sure you want to remove this Holiday?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Holiday")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            //notify.js plugin
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                })
            }
        }

    </script>
}

